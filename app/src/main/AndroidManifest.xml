<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.can301.things">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo144"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.can301.things.MainActivity" />
        <activity android:name="com.example.can301.things.Today.NoteActivity" />
        <activity
            android:name="com.example.can301.things.Today.TodayCreateActivitty"
            android:theme="@style/MyTheme1"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name="com.example.can301.things.Today.AlterTodayActivity"
            android:theme="@style/MyTheme1"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name="com.example.can301.things.Log.LogActivity" />
        <activity
            android:name="com.example.can301.things.Log.LogCreateActivity"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name="com.example.can301.things.Log.AlterLogActivity" />
        <activity android:name="com.example.can301.things.History.HistoryActivity" />
        <activity android:name="com.example.can301.things.Schedule.ScheduleActivity" />
        <activity android:name="com.example.can301.things.Schedule.ScheduleViewActivity" />
        <activity
            android:name="com.example.can301.things.Schedule.ScheduleCreateActivity"
            android:theme="@style/MyTheme1"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name="com.example.can301.things.Record.AnalyzeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.can301.things.Record.RecordListActivity"
            android:exported="false" />
        <activity
            android:name="com.example.can301.things.Record.RecordActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustPan">
        </activity>
        <activity android:name="com.example.can301.things.Tomato.TomatoActivity" />
        <activity android:name="com.example.can301.things.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.can301.things.Setting.SettingActivity" />

        <service
            android:name="com.example.can301.things.Service.SendMessage"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.example.can301.things.Setting.ExplainActivity_Today" />
        <activity android:name="com.example.can301.things.Setting.ExplainActivity_Tomato" />
        <activity android:name="com.example.can301.things.Setting.ExplainActivity_Log" />
        <activity
            android:name="com.example.can301.things.Schedule.AlterScheduleActivity"
            android:theme="@style/MyTheme1"
            android:windowSoftInputMode="stateVisible|adjustPan" />
    </application>

</manifest>